<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pain.t.PainTControls">

    <!--Menubar-->
    <top>
        <MenuBar>
            <!--file manipulation-->
            <Menu text="File">
                <MenuItem text="Save" onAction="#onSaveClick" fx:id="Save"/>
                <MenuItem text="Save As" onAction="#onSaveAsClick"/>
                <MenuItem text="Load" onAction="#onLoadClick"/>
            </Menu>

            <!--pencil tools-->
            <Menu text="Pencils">
                <CustomMenuItem hideOnClick="false">
                    <content>
                        <Spinner fx:id="penSize" editable="true" onMouseClicked="#onPenSpinnerClick">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="100" initialValue="20" amountToStepBy="5"/>
                            </valueFactory>
                        </Spinner>
                    </content>
                </CustomMenuItem>
                <MenuItem text="Basic Pencil" onAction="#onBasicClick" fx:id="BasicPencil"/>
                <MenuItem text="Eraser" onAction="#onEraserClick"/>
            </Menu>

            <!--shape tools-->
            <Menu text="Shapes">
                <CustomMenuItem hideOnClick="false">
                    <content>
                        <Spinner fx:id="shapeWidth" editable="true">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="500" initialValue="100" amountToStepBy="10"/>
                            </valueFactory>
                        </Spinner>
                    </content>
                </CustomMenuItem>
                <CustomMenuItem hideOnClick="false">
                    <content>
                        <Spinner fx:id="shapeHeight" editable="true">
                            <valueFactory>
                                <SpinnerValueFactory.IntegerSpinnerValueFactory min="1" max="500" initialValue="100" amountToStepBy="10"/>
                            </valueFactory>
                        </Spinner>
                    </content>
                </CustomMenuItem>
                <CheckMenuItem fx:id="outlined" text=" Shape Outline"/>
                <MenuItem text="Rectangle" onAction="#onRectangleClick"/>
                <MenuItem text="Circle" onAction="#onCircleClick"/>
                <MenuItem text="Triangle" onAction="#onTriangleClick"/>
                <MenuItem text="???" onAction="#onSecretClick"/>
            </Menu>

            <!--color items-->
            <Menu text="Color Tools">
                <MenuItem text="Color Grabber" onAction="#onColorGrabberClick"/>
            </Menu>

            <!--zoom in/out-->
            <Menu text="Zoom">
                <MenuItem text="Zoom in" onAction="#onZoomIn"/>
                <MenuItem text="Zoom Out" onAction="#onZoomOut"/>
            </Menu>

            <!--about/tips-->
            <Menu text="Help">
                <MenuItem text="Tips" onAction="#onTipsClick"/>
                <MenuItem text="About" onAction="#onAboutClick"/>
            </Menu>
        </MenuBar>
    </top>

    <!--Things that can't go in a menu bar-->
    <bottom>
        <HBox>
            <!--color handler-->
            <ColorPicker fx:id="colorPicker">
                <HBox.margin>
                    <Insets right="2"/>
                </HBox.margin>
                <value>
                    <Color blue="0.0" green="0.0" red="0.0"/>
                </value>
            </ColorPicker>
            <!--general messages-->
            <Label fx:id="saveOutcome" text="Welcome!">
                <HBox.margin>
                    <Insets left="2"/>
                </HBox.margin>
            </Label>
        </HBox>
    </bottom>

    <!--image-->
    <center>
        <ScrollPane>
            <ImageView fx:id="imageView" preserveRatio="true" pickOnBounds="true" onMouseClicked="#onImageViewClick" onMouseDragged="#onImageViewMouseDrag">
                <WritableImage fx:id="image" width="600" height="400"/>
            </ImageView>
        </ScrollPane>
    </center>

